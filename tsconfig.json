{
	"compilerOptions": {
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		],
		"jsx": "react-jsx"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"main.ts"
	]
}
